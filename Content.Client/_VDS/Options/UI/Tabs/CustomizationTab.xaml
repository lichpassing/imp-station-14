<tabs:CustomizationTab xmlns="https://spacestation14.io"
                       xmlns:tabs="clr-namespace:Content.Client._VDS.Options.UI.Tabs"
                       xmlns:xNamespace="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:s="clr-namespace:Content.Client.Stylesheets"
                       xmlns:ui="clr-namespace:Content.Client.Options.UI">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Vertical" Margin="8 8 8 8" VerticalExpand="True">
            <Label Text="{Loc 'ui-options-general-forknotice'}"
                   FontColorOverride="{xNamespace:Static s:StyleNano.ConcerningOrangeFore}"
                   StyleClasses="LabelKeyText"/>
            <Label Text="{Loc 'vds-ui-options-header-colors'}"
                   FontColorOverride="{xNamespace:Static s:StyleNano.NanoGold}"
                   StyleClasses="LabelKeyText"/>
            <ui:OptionColorSlider Name="OOCColorSlider"
                Title="{Loc 'vds-ui-options-ooc-color-title'}"
                Example="{Loc 'vds-ui-options-ooc-color-example'}"/>
        </BoxContainer>
        <ui:OptionsTabControlRow Name="Control" Access="Public" />
    </BoxContainer>
</tabs:CustomizationTab>
